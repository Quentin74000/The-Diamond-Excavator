<Window
    x:Class="The_Diamond_Excavator.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:The_Diamond_Excavator"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="fenetreJeu"
    Title="FenetreJeu"
    Width="1920"
    Height="1080"
    KeyDown="joueur_ToucheEnfoncee"
    KeyUp="joueur_ToucheRelachee"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    mc:Ignorable="d">
    <Grid>
        <Canvas x:Name="zoneJeu">
            <Image
                x:Name="joueur"
                Canvas.Left="370"
                Canvas.Top="47"
                Width="60"
                Height="60"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Source="/img/PelleteuseDroite.png"
                Stretch="Fill" />
            <Rectangle
                x:Name="collisionJoueur"
                Canvas.Left="370"
                Canvas.Top="47"
                Width="60"
                Height="60" />
            <Rectangle
                x:Name="bloc"
                Canvas.Left="513"
                Canvas.Top="107"
                Width="64"
                Height="64"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Stroke="Black">
                <Rectangle.Fill>
                    <ImageBrush ImageSource="/img/Terre.png" />
                </Rectangle.Fill>
            </Rectangle>
            <Image
                x:Name="imgSolGauche"
                Canvas.Top="107"
                Width="1920"
                Height="957"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Source="/img/sol.png"
                Stretch="Fill" />
            <Rectangle
                x:Name="solGauche"
                Canvas.Top="107"
                Width="577"
                Height="957"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Stroke="Black" />
            <Rectangle
                x:Name="solDroit"
                Canvas.Left="1343"
                Canvas.Top="107"
                Width="577"
                Height="957"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Stroke="Black" />
            <Rectangle
                x:Name="solBas"
                Canvas.Left="577"
                Canvas.Top="812"
                Width="766"
                Height="252"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                RenderTransformOrigin="0.5,0.5"
                Stroke="Black">
                <Rectangle.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleY="-1" />
                        <SkewTransform />
                        <RotateTransform />
                        <TranslateTransform />
                    </TransformGroup>
                </Rectangle.RenderTransform>
            </Rectangle>
            <Label x:Name="testCollision" Content="Label" Canvas.Left="90" Canvas.Top="47"/>
        </Canvas>
    </Grid>
</Window>
