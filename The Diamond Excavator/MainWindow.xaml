<Window
    x:Class="The_Diamond_Excavator.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:The_Diamond_Excavator"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="fenetreJeu"
    Title="FenetreJeu"
    Width="1920"
    Height="1080"
    KeyDown="joueur_ToucheEnfoncee"
    KeyUp="joueur_ToucheRelachee"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    mc:Ignorable="d">
    <Grid>
        <Canvas x:Name="zoneJeu">
            <Image
                Canvas.Top="107"
                Width="1920"
                Height="957"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Source="/img/sol.png"
                Stretch="Fill" />
            <Rectangle
                x:Name="solDroit"
                Canvas.Left="1289"
                Canvas.Top="107"
                Width="631"
                Height="957"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Stroke="Black" />
            <Rectangle
                x:Name="solBas"
                Canvas.Left="203"
                Canvas.Top="745"
                Width="1087"
                Height="321"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                RenderTransformOrigin="0.5,0.5"
                Stroke="Black">
                <Rectangle.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleY="-1" />
                        <SkewTransform />
                        <RotateTransform />
                        <TranslateTransform />
                    </TransformGroup>
                </Rectangle.RenderTransform>
            </Rectangle>
            <Rectangle
                x:Name="solGauche"
                Canvas.Left="0"
                Canvas.Top="107"
                Width="203"
                Height="957"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Stroke="Black" />
            <Rectangle
                x:Name="bombe"
                Canvas.Left="139"
                Canvas.Top="107"
                Width="64"
                Height="64"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Visibility="Hidden">
                <Rectangle.Fill>
                    <ImageBrush ImageSource="/img/Bombe.png" />
                </Rectangle.Fill>
            </Rectangle>
            <Rectangle
                x:Name="diamant"
                Canvas.Left="139"
                Canvas.Top="107"
                Width="64"
                Height="64"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Visibility="Hidden">
                <Rectangle.Fill>
                    <ImageBrush ImageSource="/img/Diamant.png" />
                </Rectangle.Fill>
            </Rectangle>
            <Rectangle
                x:Name="bloc"
                Canvas.Left="139"
                Canvas.Top="107"
                Width="64"
                Height="64"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Stroke="Black"
                Visibility="Hidden">
                <Rectangle.Fill>
                    <ImageBrush ImageSource="/img/Terre.png" />
                </Rectangle.Fill>
            </Rectangle>
            <Rectangle
                x:Name="vie"
                Canvas.Left="-32"
                Canvas.Top="10"
                Width="32"
                Height="32"
                HorizontalAlignment="Left"
                VerticalAlignment="Center" Visibility="Hidden">
                <Rectangle.Fill>
                    <ImageBrush ImageSource="/img/Coeur.png" />
                </Rectangle.Fill>
            </Rectangle>
            <Image
                x:Name="joueur"
                Canvas.Left="930"
                Canvas.Top="57"
                Width="50"
                Height="50"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Source="/img/PelleteuseDroite.png"
                Stretch="Fill" />
            <Rectangle
                x:Name="collisionJoueur"
                Canvas.Left="930"
                Canvas.Top="57"
                Width="50"
                Height="50"
                HorizontalAlignment="Center"
                VerticalAlignment="Top" />
            <Label
                x:Name="lab_chronometre"
                Canvas.Left="1289"
                Canvas.Top="10"
                Content="Temps : 0" HorizontalAlignment="Left" VerticalAlignment="Center" />
            <Label x:Name="diamantTrouve" Content="Diamants trouvés : 0/6" Canvas.Left="341" Canvas.Top="10" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <Label x:Name="bombeRestante" Content="Bombes restantes : " Canvas.Left="548" Canvas.Top="10" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        </Canvas>
    </Grid>
</Window>
