<Window
    x:Class="The_Diamond_Excavator.MenuJeu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:The_Diamond_Excavator"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="MenuJeux"
    Title="MenuJeu"
    Width="800"
    Height="450"
    Background="#FFD42CF1"
    mc:Ignorable="d">
    <Grid x:Name="textBoxDiamant">

        <Button
            x:Name="butJouer"
            Width="250"
            Height="55"
            Margin="106,249,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="butJouer_Click"
            Content="JOUER"
            FontFamily="Britannic Bold"
            FontSize="16" />
        <Label
            x:Name="labNbVie"
            Margin="37,124,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Nombre de Vie(s) : "
            FontSize="14"
            FontWeight="Bold"
            Foreground="Black"
            RenderTransformOrigin="0.332,1.594" />
        <Label
            x:Name="labNbBombe"
            Margin="600,124,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Nombre de Bombe(s) :"
            FontSize="14"
            FontWeight="Bold"
            RenderTransformOrigin="0.73,1.032" />
        <Label
            x:Name="labNbDiamant"
            Margin="0,118,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Content="Nombre de diamant(s) :"
            FontSize="14"
            FontWeight="Bold" />
        <Label
            x:Name="NomJeu"
            Width="252"
            Height="41"
            Margin="0,30,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Content="The Diamond Excavator"
            FontFamily="Britannic Bold"
            FontSize="20" />
        <TextBox
            x:Name="textBoxVie"
            Width="120"
            Margin="46,165,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text=""
            TextWrapping="Wrap" />
        <TextBox
            x:Name="textBoxDiamant1"
            Width="120"
            Margin="0,165,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Text=""
            TextWrapping="Wrap" />
        <TextBox
            x:Name="textBoxBombe"
            Width="120"
            Margin="619,165,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text=""
            TextWrapping="Wrap" />
        <Button
            x:Name="butQuitter"
            Width="250"
            Height="55"
            Margin="106,309,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="butQuitter_Click"
            Content="QUITTER"
            FontFamily="Britannic Bold"
            FontSize="16" />
        <Button
            x:Name="butOptions"
            Width="250"
            Height="55"
            Margin="429,249,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="butOptions_Click"
            Content="OPTIONS"
            FontFamily="Britannic Bold"
            FontSize="16" />

    </Grid>
</Window>
