<Window x:Class="The_Diamond_Excavator.Gagne"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:The_Diamond_Excavator"
        mc:Ignorable="d"
        Title="Gagne" Height="500" Width="450" WindowStartupLocation="CenterScreen" Icon="/img/Diamant.png" ResizeMode="CanMinimize">
    <Window.Background>
        <ImageBrush ImageSource="/img/Victoire.png"/>
    </Window.Background>
    <Grid>
        <Button Content="Quitter" HorizontalAlignment="Center" FontFamily="Britannic Bold" Margin="0,352,0,0" VerticalAlignment="Top" Width="248" Height="72" FontSize="36" Click="Quitter_Click"/>
        <Label Content="Vous avez gagné !" Background="#FFF9D2D2" FontFamily="Britannic Bold" HorizontalAlignment="Center" Margin="0,86,0,0" VerticalAlignment="Top" FontSize="36" Foreground="#FF009810"/>
    </Grid>
</Window>